# Mod4 = Windows key
set $mod Mod4

# Font for window titles and bar.
font pango:Hack Nerd Font 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Hide borders adjacent to screen edges (dont waste a pixel!)
hide_edge_borders vertical

# Move mouse to display center when changing focus to another output (display)
mouse_warping output

# To switch back to the previous workspace, just $mod+currentWorkspace !!!
workspace_auto_back_and_forth yes

# Do not wrap the screen when trying to focus over the edge of a container.
focus_wrapping no
focus_follows_mouse no

